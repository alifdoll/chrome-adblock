{
  "name": "Chrome AdBlock",
  "version": "1.0.0",
  "description": "Chrome AdBlock",
  "manifest_version": 3,
  "author": "Alep",
  "action": {
    "default_popup": "index.html",
    "default_title": "Simple Chrome AdBlock",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["blocker.js"]
    }
  ]
}
