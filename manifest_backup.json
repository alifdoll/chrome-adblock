{
  "manifest_version": 3,
  "name": "Chrome AdBlock",
  "description": "Chrome AdBlock",
  "author": "Alifdoll",
  "version": "1.0.0",
  "icons": {
    "16": "block.png",
    "32": "block.png",
    "48": "block.png",
    "128": "block.png"
  },
  "action": {
    "default_title": "Simple Chrome AdBlock",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube.js"]
    },
    {
      "matches": ["*://*/*"],
      "js": ["blocker.js"]
    }
  ],
  "permissions": ["scripting", "activeTab"]
}
